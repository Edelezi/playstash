{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}